<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.products.fragments.DetailsOfAllProductsFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:background="#F5F5F5"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:padding="12dp">

           <LinearLayout
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="2dp"
               android:layout_marginTop="60dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <ImageView
                   android:id="@+id/img_favorite_product_main"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_gravity="center"
                   android:layout_marginBottom="4dp"
                   android:src="@drawable/ic_favorite" />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:orientation="vertical"
                       android:background="@drawable/bg9"
                       android:layout_marginTop="60dp">

                       <ImageView
                           android:id="@+id/img_addToCart_product_main"
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_weight="1"
                           android:src="@drawable/ic_add"
                           android:layout_marginTop="20dp" />

                       <TextView
                           android:id="@+id/tv_quantity_product_main"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:fontFamily="@font/rb_light"
                           android:gravity="center"
                           android:text="1"
                           android:layout_marginTop="20dp"
                           android:textColor="@color/colorPrimary"
                           android:textSize="22sp"
                           android:textStyle="bold"
                           android:background="@color/lightGray2"
                           android:paddingTop="10dp"
                           android:paddingBottom="10dp"/>

                       <ImageView
                           android:id="@+id/tv_removeFromCart_product_main"
                           android:layout_width="30dp"
                           android:layout_height="30dp"
                           android:layout_weight="1"
                           android:src="@drawable/ic_remove"
                           android:layout_marginTop="20dp"
                           android:layout_marginBottom="30dp"/>

                   </LinearLayout>


           </LinearLayout>


       </androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.cardview.widget.CardView
           android:layout_width="250dp"
           android:layout_height="220dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="100dp">

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/glasses3"/>

       </androidx.cardview.widget.CardView>

   </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>