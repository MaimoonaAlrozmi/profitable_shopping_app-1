<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBF8EC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/bg2"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/img_product_main"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="0.7"
            android:background="@drawable/bg4"
            android:src="@drawable/shoe" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price_product_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rb_light"
                android:gravity="left"
                android:text="900$"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:padding="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name_product_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rb_light"
                android:gravity="left"
                android:paddingLeft="6dp"
                android:text="Laptop HP"
                android:textColor="@color/black"
                android:layout_marginTop="6dp"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp">

            <ImageView
                android:id="@+id/img_favorite_product_main"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_favorite" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/lightGray2"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">


                    <TextView
                        android:id="@+id/tv_quantity_product_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg2"
                        android:fontFamily="@font/rb_light"
                        android:gravity="center"
                        android:text="Add to cart"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>